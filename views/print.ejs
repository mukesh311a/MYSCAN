<!doctype html>
<html><head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Print QR</title>
<link rel="stylesheet" href="/public/style.css">
<style>
@media print {.no-print{display:none} body{padding:0} .sheet{box-shadow:none}}
.sheet{max-width:480px;margin:24px auto;background:#fff;color:#000;border-radius:12px;padding:16px}
.row{display:flex;gap:16px;align-items:center}
.qrbox{width:160px;height:160px;border:1px solid #ddd;display:flex;align-items:center;justify-content:center}
.info{flex:1}
.info h2{margin:0 0 8px}
.meta{font-size:14px;color:#444}
.small{font-size:12px;color:#666;margin-top:8px}
</style>
</head><body>
<div class="no-print" style="text-align:center;margin:16px">
  <button class="btn" onclick="window.print()">Print</button>
  <a class="btn ghost" href="/admin">Back</a>
</div>
<section class="sheet">
  <div class="row">
    <div class="qrbox"><img src="<%= qrPath %>" style="width:100%;height:100%;object-fit:contain"></div>
    <div class="info">
      <h2>Scan to contact owner</h2>
      <div class="meta">Name: <strong><%= car.owner_name %></strong></div>
      <div class="meta">Car No: <strong><%= car.car_no %></strong></div>
      <div class="small">Phone is masked. Docs need a password.</div>
      <div class="small"><%= publicUrl %></div>
    </div>
  </div>
</section>
</body></html>
